<nav class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path, class: "text-xl font-bold text-indigo-600 hover:text-indigo-700" do %>
          Profitly
        <% end %>
      </div>
      
      <div class="ml-auto flex items-center">
        <% if user_signed_in? %>
          <div class="flex items-center space-x-4">
            <span class="text-gray-700">Hello, <%= current_user.first_name || current_user.email %></span>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, 
                class: "bg-indigo-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-indigo-700 
                       transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
                       focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% else %>
          <%= link_to "Login", new_user_session_path, 
              class: "bg-indigo-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-indigo-700 
                     transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
                     focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
