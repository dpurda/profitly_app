<% content_for :title, "Add new product" %>
<div class="items-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="flex items-center mb-6 mt-4">
    <div class="flex items-center">
      <%= link_to stocks_path, 
          class: "bg-gray-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-gray-700 
                 transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
                 focus:ring-offset-2 focus:ring-gray-500",
          title: "Back" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
          <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </div>
  
  <%= render "form", product: @product %>
</div>
