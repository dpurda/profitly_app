<div class="w-full px-4 py-8">
  <% if notice.present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% content_for :title, "Stocks" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">STOCKS</h1>
    <%= link_to "Add new stock", new_stock_path, 
        class: "bg-indigo-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-indigo-700 
               transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
               focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
  
  <div class="mb-6">
    <%= form_with url: stocks_path, method: :get do |form| %>
      <div class="flex items-center border border-gray-300 rounded-lg overflow-hidden w-full">
        <div class="px-3 py-2 bg-gray-100">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-gray-500">
            <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
          </svg>
        </div>
        <%= form.text_field :search, 
            placeholder: "Search stocks by description...", 
            value: params[:search], 
            class: "w-full py-2 px-3 focus:outline-none" %>
      </div>
    <% end %>
    <% if params[:search].present? %>
      <div class="mt-2">
        <span class="text-gray-600 ml-2">Found <%= @stocks.count %> result(s)</span>
        <%= link_to "clear", stocks_path, class: "text-indigo-600 hover:text-indigo-800" %>
      </div>
    <% end %>
  </div>

  <div id="stocks" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2 gap-6 w-full">
    <% @stocks.each do |stock| %>
      <div class="bg-white shadow-md rounded-lg p-4">
        <%= render stock %>
      </div>
    <% end %>
  </div>
</div>
