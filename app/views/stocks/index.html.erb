<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% content_for :title, "Stocks" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Stocks</h1>
    <%= link_to "Add new stock", new_stock_path, 
        class: "bg-indigo-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-indigo-700 
               transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
               focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <div id="stocks" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @stocks.each do |stock| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
        <%= render stock %>
        <div class="mt-4 flex justify-end">
          <%= link_to "Show details", stock, 
              class: "bg-indigo-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-indigo-700 
                     transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
                     focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
