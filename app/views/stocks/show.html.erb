<div class="container mx-auto px-4">
  <% if notice.present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
      <%= notice %>
    </div>
  <% end %>
  
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center space-x-2">
      <%= link_to stocks_path, 
          class: "bg-gray-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-gray-700 
                 transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
                 focus:ring-offset-2 focus:ring-gray-500",
          title: "Back" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
          <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
    
    <div class="flex space-x-2">
      <%= link_to edit_stock_path(@stock), 
          class: "bg-indigo-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-indigo-700 
                 transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
                 focus:ring-offset-2 focus:ring-indigo-500",
          title: "Edit" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
          <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
          <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
        </svg>
      <% end %>

      <%= button_to @stock, method: :delete, 
          class: "bg-red-600 text-white px-3 py-1.5 text-sm rounded-md hover:bg-red-700 
                 transition ease-in-out duration-150 font-medium focus:outline-none focus:ring-2 
                 focus:ring-offset-2 focus:ring-red-500",
          form: { class: "inline-block", data: { turbo_confirm: "Are you sure you want to delete this stock? This action cannot be undone." } },
          title: "Delete" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
          <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </div>
</div>
<div class="container mx-auto px-4 py-8">
  <%= render @stock %>
</div>
