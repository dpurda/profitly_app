<!-- How It Works Section -->
<section class="py-16 bg-gray-100 rounded-lg">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">How It Works</h2>
    
    <div class="grid md:grid-cols-4 gap-6 max-w-4xl mx-auto">
      <!-- Step 1 -->
      <div class="text-center">
        <div class="bg-indigo-600 text-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-4 text-xl font-bold">1</div>
        <h3 class="text-lg font-bold mb-2 text-gray-800">Create a Stock</h3>
        <p class="text-gray-600">Add a new stock with description and date</p>
      </div>
      
      <!-- Step 2 -->
      <div class="text-center">
        <div class="bg-indigo-600 text-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-4 text-xl font-bold">2</div>
        <h3 class="text-lg font-bold mb-2 text-gray-800">Add Products</h3>
        <p class="text-gray-600">Add products with purchase and selling prices</p>
      </div>
      
      <!-- Step 3 -->
      <div class="text-center">
        <div class="bg-indigo-600 text-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-4 text-xl font-bold">3</div>
        <h3 class="text-lg font-bold mb-2 text-gray-800">Track Inventory</h3>
        <p class="text-gray-600">Manage product details and inventory levels</p>
      </div>
      
      <!-- Step 4 -->
      <div class="text-center">
        <div class="bg-indigo-600 text-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-4 text-xl font-bold">4</div>
        <h3 class="text-lg font-bold mb-2 text-gray-800">Monitor Profits</h3>
        <p class="text-gray-600">See your profits grow in real-time</p>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="py-16">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-6 text-gray-800">Ready to Start Maximizing Your Profits?</h2>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">Join thousands of businesses that use Profitly to track inventory and increase their bottom line.</p>
    
    <% if !user_signed_in? %>
      <%= link_to "Get Started Today", new_user_registration_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white text-lg font-bold py-3 px-10 rounded-lg shadow-lg transition duration-300" %>
    <% else %>
      <%= link_to "Go to Dashboard", stocks_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white text-lg font-bold py-3 px-10 rounded-lg shadow-lg transition duration-300" %>
    <% end %>
  </div>
</section>