<!-- Hero Section -->
<section class="bg-gradient-to-r from-indigo-700 to-purple-800 text-white py-16 rounded-lg shadow-lg">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold mb-4">Welcome to Profitly</h1>
    <p class="text-xl md:text-2xl max-w-2xl mx-auto opacity-90">Track your inventory, monitor pricing, and maximize your profits with ease</p>
    
    <% if user_signed_in? %>
      <div class="mt-8">
        <%= link_to "Manage Stocks", stocks_path, class: "bg-white text-indigo-700 hover:bg-indigo-50 text-lg font-bold py-3 px-8 rounded-full shadow-md transition duration-300" %>
      </div>
    <% else %>
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <%= link_to "Sign Up", new_user_registration_path, class: "bg-white text-indigo-700 hover:bg-indigo-50 text-lg font-bold py-3 px-8 rounded-full shadow-md transition duration-300" %>
        <%= link_to "Login", new_user_session_path, class: "bg-transparent hover:bg-white hover:text-indigo-700 text-white text-lg font-bold py-3 px-8 rounded-full border-2 border-white transition duration-300" %>
      </div>
    <% end %>
  </div>
</section>

